# ============================================================================
# Bitcoin Trading System - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control (already in .gitignore)
# ============================================================================

# HuggingFace API (for free LLM inference)
# Get your key at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_key_here

# OpenRouter API (for additional free LLM access)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_key_here

# Binance Exchange API (for trading execution)
# Get your keys at: https://www.binance.com/en/my/settings/api-management
# WARNING: Enable only spot trading permissions, disable withdrawals
BINANCE_API_KEY=your_key_here
BINANCE_API_SECRET=your_secret_here

# CoinMarketCap API (for market data)
# Get your key at: https://pro.coinmarketcap.com/account
# NOTE: Free tier has STRICT 1 call per 5 minutes limit
COINMARKETCAP_API_KEY=your_key_here

# NOTE: On-chain analytics now uses FREE Blockchain.com API (no key needed!)
# See tools/bitcoin_onchain_analyzer.py

# Telegram Bot (for alerts and notifications)
# Create bot via @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Google Sheets (for dynamic configuration)
# Share sheet with service account email from service_account.json
# URL format: https://docs.google.com/spreadsheets/d/{SHEET_ID}/edit
GOOGLE_SHEET_URL=your_sheet_url_here

# ============================================================================
# Optional: Logging and Monitoring
# ============================================================================

# LangSmith (for LangChain observability)
# Get your key at: https://smith.langchain.com/settings
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langsmith_key_here
LANGCHAIN_PROJECT=bitcoin-trading-system

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Optional: Advanced Configuration
# ============================================================================

# Testnet Mode (true = paper trading, false = live trading)
TESTNET_MODE=true

# Data Refresh Intervals (in seconds)
MARKET_DATA_REFRESH_INTERVAL=60
PORTFOLIO_REFRESH_INTERVAL=300

# Trading Mode (LIVE, PAPER, BACKTEST)
TRADING_MODE=PAPER
